#!/bin/sh

if [ $# -lt 1 ]; then
    echo "Usage: issueLookup ID [ID...]" >&2
    exit 1
fi
ISSUE_LIST=$*

for ISSUE in $ISSUE_LIST; do
    SUMMARY=$(curl -s -u jirareadonly:jirareadonly -X GET -H "Content-Type: application/json" "http://tekcomms-jira.global.tektronix.net:8085/rest/api/2/issue/$ISSUE?fields=summary"|python -c "import json, sys; print json.load(sys.stdin)['fields']['summary']")
    echo $ISSUE: $SUMMARY;
done
